extends base 
block content 
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Create your account!
            form.form.form--signup
                .form__group
                    label.form__label(for='name') Your name
                    input#s_name.form__input(type='text', placeholder='Your name', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#s_email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#s_password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='s_confirmPassword') Confirm password
                    input#s_confirmPassword.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Sign Up 